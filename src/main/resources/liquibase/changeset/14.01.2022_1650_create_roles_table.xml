<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="14.01.2022_1635_create_roles_sequence" author="aliaksandr anashkevich">
        <createSequence sequenceName="role_id_seq" cycle="false" minValue="1"
                        maxValue="9223372036854775807" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="14.01.2022_1635_create_roles_table" author="aliaksandr anashkevich">
        <createTable tableName="roles">
            <column name="id" type="bigint" defaultValueComputed="nextval('role_id_seq')">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="14.01.2022_1650_create_user_roles_sequence" author="aliaksandr anashkevich">
        <createSequence sequenceName="user_roles_id_seq" cycle="false" minValue="1"
                        maxValue="9223372036854775807" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="14.01.2022_1655_create_user_roles_table" author="aliaksandr anashkevich">
        <createTable tableName="user_roles">
            <column name="id" type="bigint" defaultValueComputed="nextval('user_roles_id_seq')">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="14.01.2022_1657_create_users_roles_relations" author="aliaksandr anashkevich">
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="user_id"
                                 constraintName="users_user_roles_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="role_id"
                                 constraintName="roles_user_roles_fk"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>